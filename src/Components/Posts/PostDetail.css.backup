.postdetail-container {
    background: #fff;
    border-radius: 10px;
    padding: 20px 30px;
    max-width: 820px;
    border: 1px solid #f0f1f4;
}

.postdetail-header {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 4px;
    margin-bottom: 8px;
    position: relative;
}

.postdetail-actions {
    position: absolute;
    top: 0;
    right: 0;
    display: flex;
    padding: 3px 0;
    gap: 12px;
    align-items: center;
}

.postdetail-edit-link,
.postdetail-delete-link {
    font-size: 0.95rem;
    color: #b3b3b3;
    cursor: pointer;
    user-select: none;
}

.postdetail-edit-link:hover {
    color: #666;
}

.postdetail-delete-link:hover {
    color: #e03131;
}

.postdetail-category {
    font-size: 1.01rem;
    color: #2a4dcc;
    border-radius: 5px;
    padding: 3px 0;
    font-weight: 500;
    margin-bottom: 2px;
}

.postdetail-title {
    font-size: 1.45rem;
    font-weight: 700;
    color: #181c26;
    margin: 0 0 6px 0;
}

.postdetail-info-row {
    font-size: 1.03rem;
    color: #868686;
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
}

.postdetail-dot {
    margin: 0 2px;
}

.postdetail-author {
    font-weight: 500;
    color: #000;
}

.postdetail-author:hover {
    cursor: pointer;
}

.postdetail-like-btn {
    margin-left: auto;         /* 우측 끝 고정 */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 0;
    background: transparent;
    padding: 4px;
    cursor: pointer;
    border-radius: 6px;
}

.postdetail-like-btn:hover {
    background: rgba(0,0,0,0.05);
}

.postdetail-divider {
    border-top: 2px solid #eee;
    margin: 16px 0 18px 0;
}

.postdetail-content {
    color: #262932;
    min-height: 120px;
    line-height: 1.72;
    margin-bottom: 18px;
    word-break: break-word;
}

/* 마크다운 렌더링 스타일 */
.postdetail-content h1,
.postdetail-content h2,
.postdetail-content h3,
.postdetail-content h4,
.postdetail-content h5,
.postdetail-content h6 {
    margin-top: 24px;
    margin-bottom: 16px;
    font-weight: 600;
    line-height: 1.25;
    color: #181c26;
}

.postdetail-content h1 {
    font-size: 2em;
    border-bottom: 1px solid #eaecef;
    padding-bottom: 0.3em;
}

.postdetail-content h2 {
    font-size: 1.5em;
    border-bottom: 1px solid #eaecef;
    padding-bottom: 0.3em;
}

.postdetail-content h3 {
    font-size: 1.25em;
}

.postdetail-content h4 {
    font-size: 1em;
}

.postdetail-content h5 {
    font-size: 0.875em;
}

.postdetail-content h6 {
    font-size: 0.85em;
    color: #6a737d;
}

.postdetail-content p {
    margin-bottom: 16px;
    line-height: 1.6;
}

.postdetail-content code {
    background-color: rgba(27, 31, 35, 0.05);
    border-radius: 3px;
    font-size: 85%;
    margin: 0;
    padding: 0.2em 0.4em;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
}

.postdetail-content pre {
    background-color: #f6f8fa;
    border-radius: 6px;
    font-size: 85%;
    line-height: 1.45;
    overflow: auto;
    padding: 16px;
    margin-bottom: 16px;
}

.postdetail-content pre code {
    background-color: transparent;
    border: 0;
    display: inline;
    line-height: inherit;
    margin: 0;
    max-width: auto;
    overflow: visible;
    padding: 0;
    word-wrap: normal;
}

.postdetail-content blockquote {
    border-left: 0.25em solid #dfe2e5;
    color: #6a737d;
    padding: 0 1em;
    margin: 0 0 16px 0;
}

.postdetail-content table {
    border-collapse: collapse;
    border-spacing: 0;
    width: 100%;
    margin-bottom: 16px;
    display: block;
    overflow-x: auto;
    white-space: nowrap;
}

.postdetail-content table th,
.postdetail-content table td {
    border: 1px solid #dfe2e5;
    padding: 6px 13px;
}

.postdetail-content table th {
    background-color: #f6f8fa;
    font-weight: 600;
}

.postdetail-content ul,
.postdetail-content ol {
    margin-bottom: 16px;
    padding-left: 2em;
}

.postdetail-content li {
    margin-bottom: 0.25em;
}

.postdetail-content a {
    color: #0366d6;
    text-decoration: none;
}

.postdetail-content a:hover {
    text-decoration: underline;
}

.postdetail-content img {
    max-width: 100%;
    height: auto;
    border-radius: 6px;
    margin: 8px 0;
}

.postdetail-content hr {
    height: 0.25em;
    padding: 0;
    margin: 24px 0;
    background-color: #e1e4e8;
    border: 0;
}

.postdetail-content strong {
    font-weight: 600;
}

.postdetail-content em {
    font-style: italic;
}

.postdetail-content del {
    text-decoration: line-through;
}

.postdetail-attachments {
    margin: 18px 0 0 0;
    padding: 10px 0 10px 0;
    border-top: 2px solid #ececec;
    border-bottom: 2px solid #ececec;
}
.postdetail-attachments-title {
    font-size: 1.06rem;
    font-weight: 500;
    color: #353942;
    margin-bottom: 4px;
}
.postdetail-attachments ul {
    list-style: none;
    padding: 0;
    margin: 0;
}
.postdetail-attachments li {
    margin-bottom: 4px;
    font-size: 0.9rem;
}
.postdetail-attachments a {
    color: #222;
    text-decoration: underline dotted #aaa 1.5px;
}
.file-type {
    color: #888;
    font-size: 0.98em;
}

.postdetail-btn-row {
    width: 100%;
    display: flex;
    justify-content: flex-end;
    margin-top: 14px;
}

.postdetail-btn {
    padding: 6px 28px;
    background: #f1f3f8;
    color: #262932;
    border: none;
    border-radius: 8px;
    font-size: 1.04rem;
    font-weight: 500;
    box-shadow: 0 1px 4px rgba(30,45,110,0.07);
    cursor: pointer;
    transition: background 0.14s;
}
.postdetail-btn:hover {
    background: #e7e9ee;
}

/* 댓글 영역 */
.postdetail-comment-section {
    padding-top: 22px;
    background: #fff;
}
.postdetail-comment-header {
    font-size: 1.07rem;
    font-weight: 600;
    padding-bottom: 13px;
    border-bottom: 2px solid #ececec;
    color: #243763;
}
.postdetail-comment-list {
    list-style: none;
    padding: 0;
    margin: 0 0 14px 0;
}
.postdetail-comment-item {
    border-bottom: 2px solid #ececec;
}

.comment-item{
    padding: 6px 0 10px 0;
}
.comment-meta {
    display: flex;
    align-items: center;
    gap: 18px;
    font-size: 0.97rem;
    color: #979797;
    margin-bottom: 2px;
}

.comment-content {
    font-size: 15px;
    white-space: pre-line;
}
.postdetail-comment-input-row {
    display: flex;
    gap: 8px;
    margin-top: 8px;
}
.postdetail-comment-input {
    flex: 1;
    border: 1px solid #dadada;
    border-radius: 7px;
    padding: 10px 14px;
    font-size: 1.06rem;
    min-height: 44px;
    resize: none;
    background: #f9fafd;
}
.postdetail-comment-btn {
    background: #3a75ff;
    color: #fff;
    border: none;
    border-radius: 7px;
    padding: 0 22px;
    font-size: 1.07rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.15s;
}
.postdetail-comment-btn:disabled {
    background: #b8c3d0;
    cursor: not-allowed;
}

/* ----- 답글(대댓글) 추가 CSS ----- */
.reply-list {
    padding-left: 0;
    list-style: none;
    border-top: 2px solid #ececec;
}

.reply-list:empty {
    border-top: none;
    padding-top: 0;
    margin-top: 0;
}

.reply-item {
    padding: 8px 0 10px 18px;
    font-size: 15px;
    border-bottom: 2px solid #ececec;
}

.reply-item:last-child {
    border-bottom: none;
}

.reply-meta {
    display: flex;
    align-items: center;
    gap: 18px;
    font-size: 14px;
    margin-bottom: 2px;
    color: #636363;
}

.reply-date {
    color: #aaa;
    font-size: 13px;
}

.reply-content {
    margin-top: 2px;
    white-space: pre-line;
}

.reply-write-btn {
    margin-left: 10px;
    color: #777;
    font-size: 15px;
    cursor: pointer;
    transition: color 0.14s;
}
.reply-write-btn:hover {
    color: #2196F3;
    text-decoration: underline;
}

.reply-input-box {
    position: relative;
    margin: 10px 0 10px 18px;   /* 들여쓰기 추가 */
    display: flex;
    flex-direction: column;
}
.reply-input {
    width: 100%;
    border: 1px solid #dadada;
    border-radius: 7px;
    padding: 10px 14px 34px 14px;
    font-size: 1.02rem;
    min-height: 38px;
    resize: none;
    background: #f9fafd;
    box-sizing: border-box;
}

.reply-register-text {
    color: #999;
    font-weight: 550;
    cursor: pointer;
    user-select: none;
    transition: color 0.14s;
}
.reply-register-text.active {
    color: #3a75ff;
}

.reply-action-row {
    position: absolute;
    font-size: 0.9rem;
    right: 15px;
    bottom: 10px;
    display: flex;
    flex-direction: row;
    gap: 15px;
    align-items: center;
    z-index: 2;
}

.reply-cancel-text {
    color: #b3b3b3;
    font-weight: 500;
    cursor: pointer;
    user-select: none;
    transition: color 0.14s;
}

/* 게시글 없을 때 */
.post-not-found {
    text-align: center;
    padding: 100px 20px;
}

.post-not-found-btn {
    margin-top: 20px;
    padding: 10px 20px;
    background-color: #3563e9;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

/* 글쓰기, 보여주기 공통 본문 래퍼: 폭/패딩/타이포 일치 */
.content-body{
    width: 100%;
}

.content-body.ql-editor {
    padding: 0;
}

/* 삭제 된 댓글,답글 흐리게 */
.comment-author.deleted,
.comment-content.deleted,
.reply-content.deleted,
.reply-author.deleted{
    color: #999;
}

.comment-content.deleted:hover,
.reply-content.deleted:hover,
.comment-author.deleted:hover,
.reply-author.deleted:hover {
    cursor: default;
}

/* 폰트 사이즈 및 정렬 일치를 위한 오버라이드 */
.comment-meta,
.reply-meta {
    font-size: 0.97rem; /* 동일 */
}

.comment-content,
.reply-content,
.reply-item {
    font-size: 15px; /* 동일 */
}

.reply-date {
    font-size: inherit; /* 13px → 댓글과 동일 */
}

/* 작성자도 동일 크기 유지 */
.comment-author,
.reply-author {
    font-size: 15px;
    color: #000;
}

.comment-author:hover,
.reply-author:hover{
    cursor: pointer;
}

/* === 삭제 버튼 위치/스타일 통일 (항상 우측 끝) === */
.comment-meta,
.reply-meta {
    display: flex;
    align-items: center;
}

/* 댓글/답글 모두 같은 규칙으로 정렬/스타일 */
.comment-content,
.reply-content {
    line-height: 1.3;                 /* 동일 줄간격 */
}

/* 수정 버튼 추가(더보기) */
/* 더보기 메뉴 */
.more-wrapper {
    margin-left: auto;
    position: relative;
}
.more-btn {
    border: 0;
    background: transparent;
    cursor: pointer;
    color: #b3b3b3;
    padding: 2px 8px;
    border-radius: 6px;
    font-size: 18px;
    line-height: 1;
}
.more-btn:hover { background: rgba(0,0,0,0.05); }

.more-menu {
    position: absolute;
    right: 0;
    top: 100%;
    margin-top: 6px;
    background: #fff;
    border: 1px solid #e8ebf2;
    border-radius: 8px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.08);
    min-width: 120px;
    padding: 4px;
    z-index: 10;
}
.more-menu-item {
    padding: 8px 10px;
    font-size: 0.95rem;
    color: #333;
    cursor: pointer;
    border-radius: 6px;
}
.more-menu-item:hover { background: #f5f7fb; }
.more-menu-item.danger { color: #e03131; }
